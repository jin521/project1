
<div class="main">
<h2>Create New Story</h2>


<!-- <form class="form-horizontal"> -->

  <%= form_for @story, html: {class:"form-horizontal"} do |f| %>

    <div class="form-group">
          <div class="col-sm-5 control-label">
             <%= f.label :title  %>
          </div>
          <div class="col-sm-2 control-from">

              <%= f.text_field :title, :autofocus => true, :required => true, :placeholder =>"Title"%>

          </div>
    </div>



   <div class="form-group">
          <div class="col-sm-5 control-label">
             <%= f.label :content %>
         </div>
         <div class="col-sm-5 control-from">
          <%= f.text_area :content, :required => true, :placeholder =>"Enter your story here",:class =>"form-control",:rows =>"15"%>
         </div>
  </div>

    <div class="form-group">
        <div >
          <%= f.submit "share this story" %>
        </div>
    </div>
<% end %>

  <!-- </form> -->
