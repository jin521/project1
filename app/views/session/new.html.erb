

<div class ="main">

<h2>Login <span class="glyphicon glyphicon-glass"></span></h2>
<%= form_tag '/login',:class => 'form-inline' do %>


<div class ="form-group">
  <%= label_tag :email, nil, :autofocus => true %>
  <%= text_field_tag :email, nil, :class => 'form-control' %>
</div>

<div class ="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, :class => 'form-control' %>
</div>

  <%= submit_tag 'Login', :class => "btn btn-danger" %>
<% end %>

</div>
